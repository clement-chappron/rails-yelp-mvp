<div class="container py-5">
  <h1 class="text-center">Create a new restaurant</h1>

  <div class="row">
    <div class="col-md-4 mx-auto">
        <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</div>
